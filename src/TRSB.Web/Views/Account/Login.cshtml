@{
    ViewData["Title"] = "Connexion";
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">

            <h3 class="text-center mb-4">Connexion</h3>
            @if (ViewData.ModelState.ErrorCount > 0)
            {
                <div class="alert alert-danger mt-3">
                    @Html.ValidationSummary()
                </div>
            }

            <form method="post" class="card p-4 shadow-sm">
                <div class="mb-3">
                    <label class="form-label">Nom dâ€™usager ou courriel</label>
                    <input name="usernameOrEmail" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Mot de passe</label>
                    <input name="password" type="password" class="form-control" required />
                </div>

                <button class="btn btn-primary w-100">Se connecter</button>
               
            </form>
            <a class="btn btn-link w-100 mt-2" asp-controller="Account" asp-action="Register">Pas de compte ? S'inscrire</a>

          
            
        </div>
    </div>
</div>