# Étape de build
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copier les fichiers de projet
COPY ["src/TRSB.Web/TRSB.Web.csproj", "src/TRSB.Web/"]
COPY ["src/TRSB.Application/TRSB.Application.csproj", "src/TRSB.Application/"]
COPY ["src/TRSB.Domain/TRSB.Domain.csproj", "src/TRSB.Domain/"]

# Restaurer les dépendances
RUN dotnet restore "src/TRSB.Web/TRSB.Web.csproj"

# Copier tout le code source
COPY . .

# Build
WORKDIR "/src/src/TRSB.Web"
RUN dotnet build "TRSB.Web.csproj" -c Release -o /app/build

# Publish
FROM build AS publish
RUN dotnet publish "TRSB.Web.csproj" -c Release -o /app/publish /p:UseAppHost=false

# Étape finale - runtime
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS final
WORKDIR /app
EXPOSE 80
EXPOSE 443

COPY --from=publish /app/publish . 
ENTRYPOINT ["dotnet", "TRSB.Web.dll"]